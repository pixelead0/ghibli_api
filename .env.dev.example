PAGINATION_DEFAULT_LIMIT=10
CREATE_INITIAL_DATA=true

# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ghibli_api
POSTGRES_HOST=ghibli_db_dev
